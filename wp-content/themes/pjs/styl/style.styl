	.arriba
		height 80px
		margin 0 15px
		&>.left
			height 100%
			display table
		.logo-container
			display table-cell
			vertical-align middle
			.logo
				display block
				//margin-left 15px
		/*&>.right
			padding-top 20px*/
	.menu
		margin 0 15px
		height 36px
		background #cdcdcd
		ul
			margin 0
			padding 0
			height 100%
			li
				list-style none
				display inline-block
				margin 5px 0 0 5px
				a
					color #000
					padding 0 20px
					display inline-block
					height 26px
					line-height 26px
					text-decoration none
					.caret
						display none
				&:hover,&.current-menu-item,&.current-menu-ancestor
					background #666
					a
						color #fff
		.submenu
			position relative
			ul
				background #666
				visibility hidden
				position absolute
				height auto
				padding 5px
				min-width 180px
				li
					margin 0
					display block
					a
						display block
						white-space nowrap
						padding 0 15px
						font-size 13px
						.caret
							display none
					&:hover
						background #fff
						a
							color #000
			&:hover
				ul
					visibility visible
			.caret
				display inline-block
.cuerpo
	padding 10px 15px
	position relative
	z-index 1
.footer
	margin 0 10px
	height 30px
	line-height 30px
	border-top 1px solid #cdcdcd
	font-size 11px
	color #666
@import base

body
	background #ddd
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	padding 15px 0
a
	color: #00B7FF
.envoltura
	margin 0 auto
	width 960px
	background #fff
	border 1px solid #c4c4c4
	box-shadow(0 0 2px 1px #bbb)
.header
	position relative
	z-index 2

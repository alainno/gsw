@import base

body
	background #ddd
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	padding 15px 0
a
	color: #00B7FF
.envoltura
	margin 0 auto
	width 960px
	background #fff
	border 1px solid #c4c4c4
	box-shadow(0 0 2px 1px #bbb)
.header
	position relative
	z-index 2
	/*.arriba
		height 80px
		display table
		.logo-container
			display table-cell
			vertical-align middle
			.logo
				display block
				margin-left 15px*/
	.arriba
		height 80px
		margin 0 15px
		&>.left
			height 100%
			display table
		.logo-container
			display table-cell
			vertical-align middle
			.logo
				display block
				//margin-left 15px
		/*&>.right
			padding-top 20px*/
	.menu
		margin 0 15px
		height 36px
		background #cdcdcd
		ul
			margin 0
			padding 0
			height 100%
			li
				list-style none
				display inline-block
				margin 5px 0 0 5px
				a
					color #000
					padding 0 20px
					display inline-block
					height 26px
					line-height 26px
					text-decoration none
					.caret
						display none
				&:hover,&.current-menu-item,&.current-menu-ancestor
					background #666
					a
						color #fff
		.submenu
			position relative
			ul
				background #666
				visibility hidden
				position absolute
				height auto
				padding 5px
				min-width 180px
				li
					margin 0
					display block
					a
						display block
						white-space nowrap
						padding 0 15px
						font-size 13px
						.caret
							display none
					&:hover
						background #fff
						a
							color #000
			&:hover
				ul
					visibility visible
			.caret
				display inline-block
.cuerpo
	padding 10px 15px
	position relative
	z-index 1
	.gallery
		.canvas
			height 529px
			background #222
			img
				margin auto
				position absolute
				left 0
				right 0
				top 0
				bottom 0
				max-height 479px
				max-width 900px
			&:hover
				.cycle-prev,.cycle-next,.cycle-caption
					visibility visible
		.cycle-prev, .cycle-next
			font-size 18px
			color #ccc
			position absolute
			height 60px
			width 40px
			background #000
			text-align center
			line-height 60px
			top 265px
			margin-top -30px
			visibility hidden
			&:hover
				color #fff
		.cycle-prev
			left 0
		.cycle-next
			right 0
		.cycle-caption
			position absolute
			left 0
			right 0
			bottom 0
			height 24px
			line-height 24px
			color #dedede
			padding 0 10px
			visibility hidden
	.carousel
		position relative
		background #333
		padding 8px
		&>a
			position absolute
			background #333
			color #fff
			top 8px
			width 25px
			height 54px
			text-align center
			line-height 54px
			&:hover
				background #444
			&.cycle-prev
				left 8px
			&.cycle-next
				right 8px
		.cycle-carousel-wrap
			&>div
				margin-left 8px
				width 54px
				/*&:last-child
					margin-right 0*/
				img
					border 1px solid #666
				&:hover,&.cycle-slide-active
					img
						border-color #fff
						cursor pointer
.footer
	margin 0 10px
	height 30px
	line-height 30px
	border-top 1px solid #cdcdcd
	font-size 11px
	color #666